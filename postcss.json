{
  "use": [
    "postcss-import",
    "postcss-discard-comments",
    "precss",
    "postcss-assets",
    "postcss-strip-units",
    "postcss-cssnext",
    "cssnano",
    "postcss-reporter"
  ],
  "input": "public/main.css",
  "output": "target/web/build/bundle.css",
  "precss": {
    "import": false,
    "mixins": true,
    "media": true,
    "properties": true,
    "minmax": false,
    "color": false,
    "nesting": true,
    "nested": true,
    "selectors": true,
    "atroot": false,
    "lookup": false,
    "extend": true,
    "matches": false,
    "not": false
  },
  "postcss-assets": {
    "basePath": "public/",
    "baseUrl": "/static/"
  },
  "postcss-reporter": {
    "clearMessages": true
  }
}
