{
  "name": "identity-frontend",
  "version": "1.0.0-SNAPSHOT",
  "description": "Frontend for User sign-in and registration at the Guardian",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guardian/identity-frontend.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "install": "npm run build",
    "build": "npm run build-css && npm run build-js",
    "prebuild-css": "mkdir -p ./target/web/build-npm",
    "build-css": "postcss public/main.css -o target/web/build-npm/bundle.css",
    "build-js": "webpack --bail --mode production",
    "watch-css": "postcss public/main.css -o target/web/public/main/bundle.css -w -m --verbose",
    "watch-js": "webpack --watch --mode development target/web/public/main/main.bundle.js",
    "lint-css": "stylelint 'public/**/*.css'",
    "watch": "concurrently --kill-others \"npm run watch-css\" \"npm run watch-js\""
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "concurrently": "^3.5.1",
    "cssnano": "^3.10.0",
    "normalize.css": "^3.0.3",
    "postcss-assets": "^5.0.0",
    "postcss-cli": "^5.0.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-discard-comments": "^2.0.4",
    "postcss-import": "^11.1.0",
    "postcss-mixins": "^6.2.0",
    "postcss-reporter": "^5.0.0",
    "postcss-strip-units": "^2.0.1",
    "precss": "^3.1.2",
    "stylelint": "^4.3.3",
    "webpack": "^4.1.0",
    "webpack-cli": "^2.0.10"
  },
  "dependencies": {
    "cookie-cutter": "^0.1.1",
    "curl-amd": "^0.8.12",
    "intl-tel-input": "^9.0.9",
    "jquery": "^3.1.0",
    "lodash": "^4.0.1",
    "raven-js": "3.0.2"
  }
}
