{
  "name": "identity-frontend",
  "version": "1.0.0-SNAPSHOT",
  "description": "Frontend for User sign-in and registration at the Guardian",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guardian/identity-frontend.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "npm run build-css && npm run build-snow-css && npm run build-js",
    "prebuild-css": "npm run lint-css && mkdir -p ./target/web/build",
    "build-css": "postcss -c postcss.json",
    "build-snow-css": "postcss -c postcss.snow.json",
    "build-js": "webpack --bail",
    "lint-css": "stylelint 'public/**/*.css'"
  },
  "devDependencies": {
    "babel-core": "^6.2.1",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.1.18",
    "cssnano": "^3.3.2",
    "normalize.css": "^3.0.3",
    "postcss-assets": "^3.0.2",
    "postcss-cli": "^2.3.2",
    "postcss-cssnext": "^2.3.0",
    "postcss-discard-comments": "^2.0.3",
    "postcss-import": "^7.1.3",
    "postcss-reporter": "^1.3.0",
    "precss": "^1.3.0",
    "stylelint": "^4.3.3",
    "webpack": "^1.12.9"
  },
  "dependencies": {
    "cookie-cutter": "^0.1.1",
    "curl-amd": "^0.8.12",
    "intl-tel-input": "^9.0.9",
    "jquery": "^3.1.0",
    "lodash": "^4.0.1",
    "raven-js": "3.0.2"
  }
}
