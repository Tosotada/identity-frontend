{{# partial "pageTitle" }}{{ sendSignInLinkSentText.pageTitle }}{{/ partial }}

{{# partial "content" }}

  <section class="layout-wrap-width">

    <div class="ajax-step-flow"><div class="ajax-step-flow__slide">

      <header class="layout-header">
        <h1 class="layout-header__title">{{ sendSignInLinkSentText.title }}</h1>
      </header>

      <div class="form-field-wrap">
        <p class="form-field-wrap__field layout-text">{{ sendSignInLinkSentText.text }}</p>
        {{# inboxCtaLink }}
          <a href="{{inboxCtaLink}}" data-link-name="inbox-cta : {{inboxCtaText}}" class="form-button form-button--secondary form-field-wrap__field">{{inboxCtaText}} {{> components/icon/arrow-inline }}</a>
        {{/inboxCtaLink}}
      </div>

    </div></div>

  </section>
{{/partial}}
{{> layout}}
