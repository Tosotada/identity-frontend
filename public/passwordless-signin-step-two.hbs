{{# partial "pageTitle" }}{{ passwordlessSignInPageText.pageTitle }}{{/ partial }}

{{# partial "content" }}

  {{#showPrelude}}
    <div class="signin__prelude ">
      <p>{{passwordlessSignInPageText.prelude}}</p>
      <p> {{passwordlessSignInPageText.preludeMoreInfo}} <a href="https://www.theguardian.com/help/identity-faq"> {{passwordlessSignInPageText.preludeFaq}} </a>.</p>
    </div>
  {{/showPrelude}}

  <h1 class="page-heading">{{ passwordlessSignInPageText.title }}</h1>

  <section class="page-standfirst">
    <p class="page-standfirst__paragraph">{{passwordlessSignInPageText.noAccount}} <a href="{{registerUrl}}" >{{passwordlessSignInPageText.signUp}}</a>.</p>
  </section>

  <section class="passwordless-signin-container">
    {{#signInTypes.isExisting}}
      {{> components/passwordless-signin/passwordless-signin-existing }}
    {{/signInTypes.isExisting}}
    {{#signInTypes.isNew}}
      <h1 class="page-heading">Register for The Guardian</h1>
    {{/signInTypes.isNew}}
    {{#signInTypes.isGuest}}
      <h1 class="page-heading">Set a password</h1>
    {{/signInTypes.isGuest}}
  </section>

  <section class="page__footer">
    {{> components/terms/_terms }}
  </section>

{{/partial}}

{{> layout}}
