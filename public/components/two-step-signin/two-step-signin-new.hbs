<form class="two-step-signin" method="POST" action="{{ actions.signInWithEmailAndPassword }}">

  <section class="layout-header">
    <h1 class="layout-header__title">{{ twoStepSignInPageText.title }}</h1>
  </section>

  {{> components/two-step-signin/_helpers }}
  {{> components/form/form-feedback-wrap }}

  <div class="form-feedback-wrap">
    <div class="form-feedback form-feedback--info">
      <p>
        {{twoStepSignInPageText.newUserEmailNotFoundErrorPre}} <strong>{{{emailForDisplay}}}</strong> {{twoStepSignInPageText.newUserEmailNotFoundErrorPost}}
      </p>
      <p class="form-feedback__colourless">
        {{twoStepSignInPageText.newUserEmailNotFoundPrompt}} <a href="{{signinUrl}}" class="link ajax-step-flow__link" data-is-reverse="true">{{twoStepSignInPageText.changeEmailLink}}</a>.
      </p>
    </div>
    <div class="form-feedback form-feedback--bullet">
      <div class="form-field-wrap">
        <label class="form-field-wrap__title" for="signin_field_email">{{twoStepSignInPageText.newUserCreateAccountAction}}</label>
        <a href="{{registerUrl}}" class="form-button form-button--main form-field-wrap__field">{{twoStepSignInPageText.registerAction}} {{> components/icon/arrow-inline }}</a>
      </div>
    </div>
    <div class="form-feedback form-feedback--bullet">
      <div class="form-field-wrap">
        <label class="form-field-wrap__title">{{twoStepSignInPageText.newUserCreateSocialAccountAction}}</label>
        {{> components/oauth-cta/_oauth-cta-content }}
      </div>
    </div>
  </div>

</form>
