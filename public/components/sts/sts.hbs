<div class="sts-slider">
  <form class="sts-slider__helpers">
    <input type="hidden" name="{{ csrfToken.fieldName }}" value="{{ csrfToken.value }}">
    <input type="hidden" name="returnUrl" value="{{returnUrl}}">
    <input type="hidden" name="skipConfirmation" value="{{skipConfirmation}}">

    {{# group }}
      <input type="hidden" name="groupCode" value="{{ group.id }}">
    {{/ group }}
    {{# clientId }}
      <input type="hidden" name="clientId" value="{{ clientId.id }}">
    {{/ clientId }}

    <input id="signin_ga_client_id" type="hidden" name="gaClientId" value="">
  </form>

  <script type="text/template" data-name="root">

    {{> components/oauth-cta/_oauth-cta-content }}

    <p class="signin-form__prelude"> <span>or</span> </p>

    <fieldset class="signin-form__fieldset">
      <div class="sts-field-wrap">
        <label class="sts-field-wrap__title">{{signInPageText.email}}</label>
        <input class="sts-input" type="email" name="email" autocomplete="username" autocapitalize="off" autocorrect="off" spellcheck="false" value="{{email}}" />
        <input class="sts-input u-h" type="password" name="password" autocomplete="password" autocapitalize="off" autocorrect="off" spellcheck="false" value="{{password}}" />
      </div>
      <div class="signin-form__control--submit">
        <button class="sts-button" type="submit">Continue {{> components/icon/arrow-inline }}</button>
      </div>
    </fieldset>
  </script>

  <script type="text/template" data-name="password" method="post">
    <fieldset class="signin-form__fieldset">
      <div class="sts-field-wrap sts-slider__slide-password-wrap">
        <label class="sts-field-wrap__title" for="signin_field_email">Please enter your password</label>
      </div>
      <div class="signin-form__control--submit">
        <button class="sts-button" type="submit">Log In {{> components/icon/arrow-inline }}</button>
      </div>
    </fieldset>
    <aside class="sts-slider__slide_section">
      <div class="sts-field-wrap">
        <p class="sts-field-wrap__title">If you don't know your password, we can email you a log-in link</p>
        <a href="/reset" class="sts-button sts-button--secondary sts-field-wrap__field">Recover password {{> components/icon/arrow-inline
        }}</a>
      </div>
    </aside>
    <aside class="sts-slider__slide_section">
      <button class="sts-button sts-button--secondary sts-js-rewind" type="submit">Start Over {{> components/icon/arrow-inline }}</button>
    </aside>
  </script>
</div>
