{{# partial "pageTitle" }}{{ signInPageText.pageTitle }}{{/ partial }}

{{# partial "content" }}

  {{#showPrelude}}
    <div class="signin__prelude">
      <p>{{signInPageText.prelude}}</p>
      <p> {{signInPageText.preludeMoreInfo}} <a href="https://www.theguardian.com/help/identity-faq"> {{signInPageText.preludeFaq}} </a>.</p>
    </div>
  {{/showPrelude}}

  <h1 class="page-heading">{{ signInPageText.title }}</h1>

  <section class="page-standfirst page-standfirst--register-promo">
    <p class="page-standfirst__paragraph">
      {{signInPageText.noAccount}}
    </p>
    <a href="{{registerUrl}}" class="form-button form-button--black">{{signInPageText.signUp}}  {{> components/icon/arrow-inline }}</a>
  </section>

  <section class="signin__section">
    {{> components/oauth-cta/_oauth-cta }}

    {{> components/signin-form/_signin-form }}
  </section>

  <section class="page__footer">

    {{> components/terms/_terms }}

  </section>

{{/partial}}

{{> layout}}
