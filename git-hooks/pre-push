  stdio: 'inherit',
}).catch(error=>{
  console.log("\n\n");
  console.log(chalk.red('ðŸ™…   Oops! you have linting errors. Sort them out by running:'));
  console.log('    '+chalk.bgWhite.bold.black('npm run fix'));
  console.log("\n\n");
})
